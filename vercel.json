{
  "version": 2,
  "routes": [
    { "src": "/config.js", "dest": "/config.js" },
    { "src": "/app.js", "dest": "/app.js" },
    { "src": "/styles/(.*)", "dest": "/styles/$1" },
    { "src": "/js/(.*)", "dest": "/js/$1" },
    { "src": "/database/(.*)", "dest": "/database/$1" },
    { "src": "/(.*\\.css)", "dest": "/$1" },

    // ğŸ‘‡ ensure API routes are NOT redirected to index.html
    { "src": "/api/(.*)", "dest": "/api/$1" },

    // catch-all fallback for frontend routes
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
